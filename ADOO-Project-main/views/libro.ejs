      <div  eblclass="container">    
        <a href="/create" class="btn btn-outline-primary mt-4"><i class='bx bxs-plus-circle bx-md'></i></a>    
      <table class="table table-bordered table-striped text-center mt-4">
        <thead>
          <tr class="bg-primary text-white">
            <th scope="col">ID</th>
            <th scope="col">Titulo</th>
            <th scope="col">cantidad</th>            
            <th scope="col">autor</th>            
          </tr>
        </thead>
        <tbody>
          <% results.forEach((libro)=>{ %>
            <tr>  
                <td><%= libro.id %></td>  
                <td><%= libro.titulo %></td>
                <td><%= libro.cantidad %></td>
                <td><%= libro.autor %></td>
                <td>
                  <a href="/edit/<%= libro.id %>" class="btn btn-outline-info"><i class='bx bxs-edit'></i></a>
                  <a href="/delete/<%= libro.id %>" class="btn btn-outline-danger"><i class='bx bxs-trash-alt'></i></a>                   
                </td>
            </tr>                                   
         <% }) %>
        </tbody>
      </table>
